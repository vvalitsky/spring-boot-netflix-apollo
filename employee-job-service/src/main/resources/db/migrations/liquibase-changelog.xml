
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
">

    <property name="schema" value="employee_job"/>

    <changeSet id="create_employee_job_table" author="vvalitsky">
        <createTable tableName="employee_job" schemaName="employee_job">

            <column name="id" type="bigint" autoIncrement="true">
                <constraints
                        primaryKey="true"
                        primaryKeyName="employee_job_pk"
                />
            </column>

            <column name="address" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="experience" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="employee_id" type="bigint">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <sql>
            insert into employee_job.employee_job (id, address, name, experience, employee_id)
            values (1, 'Moscow', 'OOO VseHorosho', 5, 1);

            insert into employee_job.employee_job (id, address, name, experience, employee_id)
            values (2, 'Omsk', 'OOO VsePloho', 15, 2);

            SELECT SETVAL('employee_job.employee_job_id_seq',MAX(id) + 1) FROM employee_job.employee_job;

        </sql>

    </changeSet>

</databaseChangeLog>